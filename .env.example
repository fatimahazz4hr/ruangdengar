# ===================================
# RUANG DENGAR - Environment Variables
# ===================================
# Copy file ini menjadi .env dan isi dengan nilai yang sesuai

# Django Environment
DJANGO_ENV=production
# Options: development, production

# Security
SECRET_KEY=your-secret-key-here-generate-new-one
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

DEBUG=False
# Never set True in production!

ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# Comma-separated list of allowed hosts

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=ruangdengar_db
DB_USER=postgres
DB_PASSWORD=your-strong-password-here
DB_HOST=localhost
DB_PORT=5432

# Static & Media Files (Production)
STATIC_ROOT=/var/www/ruangdengar/static
MEDIA_ROOT=/var/www/ruangdengar/media
STATIC_URL=/static/
MEDIA_URL=/media/

# Security Headers (Production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# AI Moderation Settings
AI_MODERATION_ENABLED=True
# Set False to disable AI analysis (not recommended)

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
